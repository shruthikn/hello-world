<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-init-method="init" default-destroy-method="destroy">

	<bean id="person" class="com.learning.spring.test.Person" scope="singleton"
		init-method="onCreate" destroy-method="onDestroy" factory-method="createPerson">
		<constructor-arg index="0" name="id" type="int" value="123"></constructor-arg>
		<constructor-arg index="1" name="name" type="String"
			value="Shruthi"></constructor-arg>
		<property name="taxId" value="345"></property>
		<property name="address">
			<value>115, Main Street East, Hamilton, Ontario L8N1G5</value>
		</property>
		<property name="workLog" ref="worklog"></property>
	</bean>

	<bean id="person2" class="com.learning.spring.test.Person" scope="singleton"
		init-method="onCreate" destroy-method="onDestroy" factory-method="createPersonDefault">
		<property name="taxId" value="345"></property>
		<property name="address">
			<value>115, Main Street East, Hamilton, Ontario L8N1G5</value>
		</property>
		<property name="workLog" ref="worklog"></property>
	</bean>

	<bean id="worklog" class="com.learning.spring.test.WorkLog">
		<constructor-arg index="0" name="activity" type="String"
			value="walking"></constructor-arg>
		<constructor-arg index="1" name="durationInHours"
			type="int" value="4"></constructor-arg>
		<property name="workLogId" value="666"></property>
	</bean>
	
	<bean id="companyfactory" class="com.learning.spring.test.CompanyFactory">
	</bean>

	<bean id="company" class="com.learning.spring.test.Company"
		factory-bean="companyfactory" factory-method="createCompany">
		<property name="name" value="ShruSoft"></property>
		<property name="place" value="Toronto"></property>
	</bean>

</beans>
